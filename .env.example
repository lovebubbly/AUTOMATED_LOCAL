# ============================================================
# AI Director - Environment Configuration
# ============================================================
# Copy this file to .env and update values as needed.
# Do not commit .env to version control!

# ------------------------------------------------------------
# ComfyUI Connection Settings
# ------------------------------------------------------------
COMFYUI_HOST=127.0.0.1
COMFYUI_PORT=8188

# ------------------------------------------------------------
# Workflow Files (relative to project root)
# ------------------------------------------------------------
WORKFLOW_IMAGE=workflows/image_gen.json
WORKFLOW_VIDEO=workflows/video_gen.json

# ------------------------------------------------------------
# Output Settings
# ------------------------------------------------------------
OUTPUT_DIR=./assets/images
PRODUCTION_TABLE=./assets/production_table.csv
CHAR_SHEET_PATH=./assets/char_sheet.png

# ------------------------------------------------------------
# Timing Settings (seconds)
# ------------------------------------------------------------
GENERATION_TIMEOUT=600
WS_RECONNECT_ATTEMPTS=3
WS_RECONNECT_DELAY=5

# ------------------------------------------------------------
# Video Batch Settings (for future video generation)
# ------------------------------------------------------------
MAX_CONCURRENT_VIDEOS=4
VIDEO_BATCH_WAIT_TIME=200

# ------------------------------------------------------------
# Logging
# ------------------------------------------------------------
MAX_LOG_ENTRIES=500
